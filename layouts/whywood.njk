{% include "partials/header.njk" %}
	<style>#nav{transform:translateZ(500px)}


</style>
	<section class="hero">
		<div>
			<img src="{{bannerImage}}" alt="hero image"/>
			<h1>{{bannerTitle}}</h1>
		</div>
	</section>
	<section class="why-wood">
		<div>
			<h2>{{heading}}</h2>
			{{description}}
		</div>
	</section>
	<section class="slider">
		<div>
			<input type="radio" name="slider" checked/>
			<input type="radio" name="slider" />
			<input type="radio" name="slider" id="rb-1"/>
			<input type="radio" name="slider" id="rb-2"/>
			<div id="slide-1" data-slide-trigger="#rb-1">
				<div class="arrow-button left"></div>
				<img src="{{sliders.left_slider.img}}" alt="{{sliders.left_slider.title}} background"/>
				<div>
					<h3>{{sliders.left_slider.heading}}</h3>
					<p>{{sliders.left_slider.description}}</p>
				</div>
				<div>
					<h3>{{sliders.left_slider.heading}}</h3>
					<p>{{sliders.left_slider.content}}</p>
				</div>
			</div>
			<div id="slide-2" data-slide-trigger="#rb-2">
				<div class="arrow-button right"></div>
				<img src="{{sliders.right_slider.img}}" alt="{{sliders.right_slider.title}} background"/>
				<div>
					<h3>{{sliders.right_slider.heading}}</h3>
					<p>{{sliders.right_slider.description}}</p>
				</div>
				<div>
					<h3>{{sliders.right_slider.heading}}</h3>
					<p>{{sliders.right_slider.content}}</p>
				</div>
			</div>
		</div>
	</section>
	<section class="cards" tabindex="0">
		<div>
			<h2>{{cardTitle}}</h2>
			<div>
				{% for card in cards %}
					<div class="flooring-all-cards">
						<img src="{{card.b_image}}" alt="{{card.header}} background"/>
						<div>
							<img src="{{card.image}}" alt="{{card.header}} icon"/>
							<h3>{{card.header}}</h3>
							<div>Learn More â€º</div>
						</div>
						<div>
							<h3>{{card.header}}</h3>
							<p>{{card.description}}</p>
						</div>
					</div>
				{% endfor %}
			</div>
		</div>
    </section>
    <script>
        var triggers = document.querySelectorAll('[data-slide-trigger');
        triggers.forEach(function (el) {
            el.addEventListener('click', function (event) {
                console.log(el.dataset);

                var rb = document.querySelector(el.dataset.slideTrigger);
                rb.checked = true;
            })
        })

    </script>
