

{% block content %}
<section class="hero">
  <div>
    <img src="{{ hero }}" alt="hero image"/>
    <h1>{{ title }}</h1>
  </div>
</section>

<section class="cards">
  <div>
    {% for card in cards %}
      <div class="card">
        <img src="{{ card.img }}" alt="{{ card.title }} icon"/>
        <h3>{{ card.title }}</h3>
        <p>{{ card.copy }}</p>
      </div>
    {% endfor %}
  </div>
</section>

<pre>{{ dump() }}</pre>
{% endblock %}
