{% extends "base.njk" %}  <!-- Ensure this file exists in the root directory -->

{% block content %}
  <section class="hero">
    <div>
      <img src="{{ hero }}" alt="hero image" />
      <h1>{{ title }}</h1>
    </div>
  </section>

  <section class="about">
    <div>
      <p>This is a static test content. If this shows up, the template is rendering correctly!</p>
    </div>
  </section>

  <section class="cards">
    <div>
      <h2>Cards Section</h2>
      {% for card in cards %}
        <div class="card">
          <img src="{{ card.img }}" alt="{{ card.title }} icon" />
          <h3>{{ card.title }}</h3>
          <p>{{ card.copy }}</p>
        </div>
      {% endfor %}
    </div>
  </section>

  <footer>
    <div>
      <h2>{{ footer.title }}</h2>
      <a href="{{ footer.url }}" class="btn">{{ footer.btnLabel }}</a>
    </div>
  </footer>
{% endblock %}
